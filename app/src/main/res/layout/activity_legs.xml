<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".legs"
    android:background="@drawable/bg21">

    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="simple squat"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/l1"
        android:padding="0dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="wighted squat"
        android:textSize="25sp"
        android:id="@+id/l2"
        android:layout_below="@+id/l1"
        android:drawableRight="@drawable/ic_action_play3"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="sumo squat"
        android:textSize="25sp"
        android:id="@+id/l3"
        android:drawableRight="@drawable/ic_action_play3"
        android:layout_below="@+id/l2"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:drawableRight="@drawable/ic_action_play3"
        android:text="deadlift"
        android:textSize="25sp"
        android:id="@+id/l4"
        android:layout_below="@+id/l3"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="walk lunges"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/l5"
        android:layout_below="@+id/l4"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="calf raise"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/l6"
        android:layout_below="@+id/l5"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
</RelativeLayout>
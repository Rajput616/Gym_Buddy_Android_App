<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".biceps"
    android:background="@drawable/bg21">

    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="standing barbell curl"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/bc1"
        android:padding="0dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="standing dumbell curl"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/bc2"
        android:layout_below="@+id/bc1"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="hammer curl inward"
        android:textSize="25sp"
        android:id="@+id/bc3"
        android:layout_below="@+id/bc2"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:drawableRight="@drawable/ic_action_play3"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="hammer curl front"
        android:textSize="25sp"
        android:id="@+id/bc4"
        android:layout_below="@+id/bc3"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:drawableRight="@drawable/ic_action_play3"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="concentration curl"
        android:textSize="25sp"
        android:id="@+id/bc5"
        android:layout_below="@+id/bc4"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_action_play3"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="21 barbell curl"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/bc6"
        android:layout_below="@+id/bc5"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="forearm booster"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/bc7"
        android:layout_below="@+id/bc6"
        android:layout_marginTop="10dp"
        android:background="@drawable/btshape"
        android:textColor="@color/white"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".abs"
    android:background="@drawable/bg21">

    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="leg raise"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/abs1"
        android:padding="0dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="flutter kicks"
        android:textSize="25sp"
        android:id="@+id/abs2"
        android:layout_below="@+id/abs1"
        android:drawableRight="@drawable/ic_action_play3"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="high knee crunches"
        android:textSize="25sp"
        android:id="@+id/abs3"
        android:drawableRight="@drawable/ic_action_play3"
        android:layout_below="@+id/abs2"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:drawableRight="@drawable/ic_action_play3"
        android:text="seated V-ups"
        android:textSize="25sp"
        android:id="@+id/abs4"
        android:layout_below="@+id/abs3"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="russian twist"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/abs5"
        android:layout_below="@+id/abs4"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="plank"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/abs6"
        android:layout_below="@+id/abs5"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chest"
    android:background="@drawable/bg21">


    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="inclined bench press"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/ch1"
        android:padding="0dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="dumbell press hammer grp"
        android:textSize="25sp"
        android:id="@+id/ch2"
        android:layout_below="@+id/ch1"
        android:drawableRight="@drawable/ic_action_play3"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="inclined dumbell fly"
        android:textSize="25sp"
        android:id="@+id/ch3"
        android:drawableRight="@drawable/ic_action_play3"
        android:layout_below="@+id/ch2"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:drawableRight="@drawable/ic_action_play3"
        android:text="Inclined push-ups"
        android:textSize="25sp"
        android:id="@+id/ch4"
        android:layout_below="@+id/ch3"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="flat bench press"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/ch5"
        android:layout_below="@+id/ch4"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="dumbell pull over"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:id="@+id/ch6"
        android:layout_below="@+id/ch5"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

</RelativeLayout>
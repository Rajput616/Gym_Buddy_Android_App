<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".back"
    android:background="@drawable/bg21">

    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="wide grip pull down (frnt)"
        android:textSize="25sp"
        android:id="@+id/bk1"
        android:drawableRight="@drawable/ic_action_play3"
        android:padding="0dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="wide grip pull down (back)"
        android:textSize="25sp"
        android:drawableRight="@drawable/ic_action_play3"
        android:id="@+id/bk2"
        android:layout_below="@+id/bk1"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="close grip pull down (frnt)"
        android:textSize="25sp"
        android:drawableRight="@drawable/ic_action_play3"
        android:id="@+id/bk3"
        android:layout_below="@+id/bk2"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="close grip pull down (back)"
        android:textSize="25sp"
        android:drawableRight="@drawable/ic_action_play3"
        android:id="@+id/bk4"
        android:layout_below="@+id/bk3"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="two arm dumbell row"
        android:textSize="25sp"
        android:drawableRight="@drawable/ic_action_play3"
        android:id="@+id/bk5"
        android:layout_below="@+id/bk4"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="barbell bentover row"
        android:textSize="25sp"
        android:id="@+id/bk6"
        android:drawableRight="@drawable/ic_action_play3"
        android:layout_below="@+id/bk5"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="T-bar row"
        android:drawableRight="@drawable/ic_action_play3"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/bk7"
        android:layout_below="@+id/bk6"
        android:layout_marginTop="10dp"
        android:background="@drawable/btshape"
        android:textColor="@color/white"/>


</RelativeLayout>
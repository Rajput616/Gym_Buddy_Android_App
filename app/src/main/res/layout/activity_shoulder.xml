<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shoulder"
    android:background="@drawable/bg21">


    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="barbell overhead press"
        android:textSize="25sp"
        android:drawableRight="@drawable/ic_action_play3"
        android:id="@+id/sh1"
        android:padding="0dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="arnold dumbell press"
        android:textSize="25sp"
        android:id="@+id/sh2"
        android:layout_below="@+id/sh1"
        android:drawableRight="@drawable/ic_action_play3"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="one arm side lateral raise"
        android:textSize="25sp"
        android:id="@+id/sh3"
        android:layout_below="@+id/sh2"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:drawableRight="@drawable/ic_action_play3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="front dumbell raise"
        android:textSize="25sp"
        android:id="@+id/sh4"
        android:layout_below="@+id/sh3"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:drawableRight="@drawable/ic_action_play3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="barbell shrugs"
        android:textSize="25sp"
        android:id="@+id/sh5"
        android:layout_below="@+id/sh4"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_action_play3"
        android:textStyle="bold|italic"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="high pull"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        android:id="@+id/sh6"
        android:drawableRight="@drawable/ic_action_play3"
        android:layout_below="@+id/sh5"
        android:layout_marginTop="10dp"
        android:background="@drawable/btshape"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

</RelativeLayout>